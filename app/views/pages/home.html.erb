<% @prices["DISPLAY"]%><br><br>

<% @prices["DISPLAY"].each do |key, value| %>
	<%= key %> - <%= value["USD"]["PRICE"] %><br>
	24h High: <%= value["USD"]["HIGHDAY"] %><br>
	24h Low: <%= value["USD"]["LOWDAY"] %><br>
	MarketCap: <%= value["USD"]["MKTCAP"] %><br><br>
<% end %>


<div class="container">
	<div class="row">
		<% for x in @news["Data"] %>
			<div class="col-sm">	
				<div class="card" style="width: 20rem;">
				  <img src="<%= x["imageurl"] %>" class="card-img-top" alt="<%= x["source"] %>">
				  <div class="card-body">
				  	<h5 class="card-title"><%= x["title"] %></h5>
				    <p class="card-text"><%= x["body"] %></p>
				    <a href="<%= x["url"] %>" class="btn btn-secondary">Read more...</a>
				  </div>
				</div>
				<br>
		</div>
		<% end %>
	</div>
</div>
		
